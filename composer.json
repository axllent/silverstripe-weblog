{
	"name": "axllent/silverstripe-weblog",
	"description": "A blog module for SilverStripe",
	"type": "silverstripe-vendormodule",
	"homepage": "https://github.com/axllent/silverstripe-weblog",
	"keywords": ["silverstripe", "blog", "news"],
	"license": "MIT",
	"authors": [
		{
			"name": "Ralph Slooten",
			"homepage": "http://www.axllent.org/"
		}
	],
	"support": {
		"issues": "https://github.com/axllent/silverstripe-weblog/issues"
	},
    "require": {
        "silverstripe/vendor-plugin": "^1.0 || ^2.0",
        "silverstripe/cms": "^4.0 || ^5.0",
        "silverstripe/assets": "^1.0 || ^2.0",
        "silverstripe/asset-admin": "^1.0 || ^2.0",
        "silverstripe/lumberjack": "^2.0 || ^3.0"
	},
    "extra": {
        "expose": [
            "css",
            "icons"
        ]
    },
    "autoload": {
        "psr-4": {
            "Axllent\\Weblog\\": "src/"
        }
    },
    "suggest": {
        "axllent/silverstripe-weblog-categories": "optional: add categories to your blog posts",
        "axllent/silverstripe-weblog-wp-import": "optional: import WordPress blog posts"
    },
    "conflict": {
        "silverstripe/blog": "*"
    }
}
